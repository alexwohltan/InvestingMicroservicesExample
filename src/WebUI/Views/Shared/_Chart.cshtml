@model ChartModel

<div>
    <canvas id="@Model.ElementId"></canvas>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>const labels = @Html.Raw(Json.Serialize(Model.LabelsForDisplay));

    const data = {
        labels: labels,
        datasets: [{
            label: '@Model.ValueLabel',
            backgroundColor: 'rgb(255, 99, 132)',
            borderColor: 'rgb(255, 99, 132)',
            data: @Html.Raw(Json.Serialize(Model.ValuesForDisplay)),
        }]
    };

    const config = {
        type: 'line',
        data: data,
        options: {}
    };</script>
<script>const myChart = new Chart(
        document.getElementById('@Model.ElementId'),
        config
    );</script>