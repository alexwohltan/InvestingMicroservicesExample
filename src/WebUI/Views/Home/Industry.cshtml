@model IndustryViewModel

@{
    ViewData["Title"] = "Industry Page";
}

<div class="text-center">
    <h1 class="display-4">@Model.Industry.Name</h1>
</div>

<div>

    <div>
        <h3 class="display-6">Companies</h3>
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Ticker</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
            @foreach (var comp in Model.Industry.Companies)
            {
                <tr>
                    <td>@comp.ID</td>
                    <td>@comp.Ticker</td>
                    <td>@comp.Name</td>
                    <td><a href="/">View</a></td>
                </tr>
            }
        </table>
    </div>

    <hr />
    <div>
        <h3 class="display-6">Benchmark</h3>
        @await Html.PartialAsync("_Benchmark", Model.IndustryBenchmark)
    </div>


</div>